{
    "env": {
			"node": true,
      "es6": true,
			"jest/globals": true,
			"browser": true
		},
		"parserOptions": {
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"extends": [ "eslint:recommended", "plugin:react/recommended"],
		"plugins": ["jest", "react"],
    "rules": {
			"indent": [
      	"error",
        "tab"
      ],
      "quotes": [
      	"error",
        "single"
      ],
      "semi": [
      	"error",
        "always"
			],
			"no-unused-vars": "off",
			"react/jsx-uses-vars": "error"
    }
}
