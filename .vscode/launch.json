    "version": "0.2.0",
    "configurations": [
			{
				"type": "node",
				"request": "launch",
				"name": "Launch API Gateway",
				"program": "${workspaceFolder}/packages/iot-api/src/index.js"
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Launch User preference",
				"program": "${workspaceFolder}/packages/user-service/src/index.js"
			},
      {
				"type": "node",
				"request": "launch",
				"name": "Launch Device Info",
				"program": "${workspaceFolder}/packages/devices-info/src/index.js"
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Launch Temperature Service",
				"program": "${workspaceFolder}/packages/temperature-service/src/index.js"
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Launch Lighting Service",
				"program": "${workspaceFolder}/packages/lighting-service/src/index.js"
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Launch Lamp",
				"program": "${workspaceFolder}/packages/smart-lamp/src/index.js"
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Launch Sensor",
				"program": "${workspaceFolder}/packages/temperature-sensor/src/index.js"
			},
      {
        "type": "node",
        "request": "launch",
        "name": "Test DeviceInfo",
				"program": "${workspaceFolder}/packages/device-info/node_modules/jest/bin/jest.js",
				"args": [
					"-i"
				]
			},
			{
        "type": "node",
        "request": "launch",
        "name": "Test TemperatureData",
				"program": "${workspaceFolder}/packages/temperature-data/node_modules/jest/bin/jest.js",
				"args": [
					"-i"
				]
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Test TemperatureService",
				"program": "${workspaceRoot}/packages/temperature-service/node_modules/jest/bin/jest.js",
				"args": [
					"-i"
				]
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Test DeviceService",
				"program": "${workspaceRoot}/packages/devices-service/node_modules/jest/bin/jest.js",
				"args": [
					"-i"
				]
			},
			{
				"type": "node",
				"request": "launch",
				"name": "Test Smart Lamp",
				"program": "${workspaceRoot}/packages/smart-light-bulb/node_modules/jest/bin/jest.js",
				"args": [
					"-i"
				]
			}
    ]
}
